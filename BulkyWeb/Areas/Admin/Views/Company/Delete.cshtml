@model Category
@{
}
<form method="post" asp-controller="Category" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                刪除類別
            </h2>
            <hr />
        </div>
        <input asp-for="Id" hidden />
        <div class="mb-3 ">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <div class="mb-3 ">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled/>

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">刪除</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="List" class="btn btn-outline-secondary border form-control">
                    返回列表
                </a>
            </div>
        </div>


    </div>

</form>
